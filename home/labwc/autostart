#pcloud 2>&1 &

syncthing 2>&1 &
# Deploy swww wallpapers
swww img $HOME/Pictures/elephant-flexoki.png 2>&1 &

exec swayidle -w \
  timeout 300 'swaylock -f --screenshots --effect-pixelate 40' \
  timeout 600 'sh -lc "/run/current-system/sw/bin/wlopm --off \"*\""' \
  resume      'sh -lc "/run/current-system/sw/bin/wlopm --on  \"*\""' \
  before-sleep 'swaylock -f --screenshots --effect-pixelate 40'



